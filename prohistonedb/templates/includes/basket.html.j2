<div class="offcanvas offcanvas-end pt-3 pb-2 py-lg-0" id="offBasket" style="flex-grow: initial !important">
  <div class="offcanvas-header ps-md-5">
    <h3 class="mb-0"><span class="material-icons-round align-middle me-2 mb-1">shopping_basket</span>Basket</h3>
    <button class="btn btn-close px-2 pt-3 mb-0 material-icons-round">close</button>
  </div>
  <div class="offcanvas-body px-md-5 d-flex flex-column justify-content-center">
    {# if (results | length) > 0 #}
    <div id="basket-buttons-wrapper" class="w-100 bg-white py-3">
        <button id="basket-download-btn" class="btn btn-primary btn-sm btn-icon mb-0" title="Download zip of all items in basket">
            <span class="material-icons-round">download</span>
            <span class="caption">Download all</span>
        </button>
        <button id="basket-clear-btn" class="btn btn-secondary btn-sm btn-icon mb-0" title="Clear all items from basket">
            <span class="material-icons-round">delete</span>
            <span class="caption">Clear basket</span>
        </button>
    </div>

    <div id="basket-items-wrapper">
        <table id="basket-items" class="table table-striped table-hover">
            <tr>
                {# UniProt ID & title #}
                <td class="w-95"><a href="#"><strong>XXXXXXXXXX - [Organism name]</strong></a></td>
                {# update basket & cookie contents #}
                <td class="text-center"><button class="btn btn-sm material-icons-round mb-0 px-0 py-0" title="Remove from basket">delete</button></td>
            </tr>
        </table>
    </div>
    {# else #}
    {#
    <div class="no-items text-center">
      <h5>Your download basket is empty.</h5>
      <p>You can use the download basket to store histone entries for later (bulk) download.</p>
    </div>
    #}
    {# endif #}
    
    {# TODO: hide (& clear) #basket-items-wrapper & #basket-buttons-wrapper when displaying spinner (status-wrapper) #}
    <div class="status-wrapper text-center my-auto d-none">
      <div class="spinner-border text-dark" role="status"></div>
      <h5>Creating zip file...</h5>
    </div>
  </div>
</div>